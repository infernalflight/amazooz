{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: Detail{% endblock %}

{% block body %}
    <h2>Detail</h2>
    {% if book.category is not empty %}
        <span class="badge badge-secondary">{{ book.category.name }}</span>
    {% endif %}
    <ul>
        <li>Titre: {{ book.title }}</li>
        <li>Author: {{ book.author }}</li>
        <li>Status: {{ book.status }}</li>
    </ul>
    <br>
    <a href="{{ path('book_update', {'id' : book.id }) }}" class="btn btn-primary">Editer</a>
{% endblock %}