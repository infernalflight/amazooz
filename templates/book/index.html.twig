{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} :: Liste{% endblock %}

{% block body %}
    <h2>Catalogue</h2>
    <ul>
    {% for book in books %}
        <li><span class="badge badge-secondary">{{ book.category.name|default('') }}</span>
            {% if book.picture is not empty %}
                <img src="{{ asset(picture_dir ~ '/' ~ book.picture) }}" width="50px"/>
            {% endif %}
            {{ book.title }} by {{ book.author }} ({{ book.publishedDate|date('d/m/Y') }})&nbsp;
            <a href="{{ path('book_detail', {'id' : book.id}) }}" class="btn btn-primary">Voir</a>
        </li>
    {% endfor %}
    </ul>
{% endblock %}
